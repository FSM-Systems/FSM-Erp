// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	div(class="container")
		div(class="row")
			span &nbsp;
		div(class="row")
			div(class="col-sm-3")
			div(class="col-sm-6")
				div(class="panel panel-info")
					div(class="panel-heading")
						h5 #{title}
					div(class="panel-body")
						form(class="form-horizontal" id="frmnewitem")
							div(class="form-group")
								label(for="wdescription" class="col-sm-2 control-label") Description:
								div(class="col-sm-10")
									input(type="text" class="form-control input-sm" name="wuunit" id="wuunit" placeholder="Unit type")
							div(class="form-group")
								input(type="hidden" name="dbtable" value="warehouse_units")
								input(type="hidden" name="returnid" value="wuid")
								input(type="hidden" id="apppage" value="/menu/warehouse_units_setup")
								button(class="btn btn-success" type="button" id="btninsert") ADD UNIT
		div(class="col-sm-3")
		
		script.
			$(document).ready(function () {
				$("#wuunit").focus();			
			})
							