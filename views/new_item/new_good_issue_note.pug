// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	div(class="container")
		div(class="row")
			span &nbsp;
		div(class="row")
			div(class="col-sm-3")
			div(class="col-sm-6")
				div(class="panel panel-info")
					div(class="panel-heading")
						h5 #{title}
					div(class="panel-body")
						form(class="form-horizontal" id="frmnewitem")
							div(class="form-group")
								label(for="ginissuedto_txt" class="col-sm-4 control-label") Issued To:
								div(class="col-sm-8")
									input(type="text" class="form-control input-sm autocomplete nodb" ac-source="users" name="ginissuedto_txt" id="ginissuedto_txt" placeholder="Goods issued to" required)
									input(type="hidden" id="ginissuedto" name="ginissuedto")
							div(class="form-group")
								label(for="ginissuedby_txt" class="col-sm-4 control-label") Issued By:
								div(class="col-sm-8")
									input(type="text" class="form-control input-sm autocomplete nodb" ac-source="users" name="ginissuedby_txt" id="ginissuedby_txt" placeholder="Good issued by")
									input(type="hidden" id="ginissuedby" name="ginissuedby")
							div(class="form-group")
								label(for="ginnotes" class="col-sm-4 control-label") Extra Notes:
								div(class="col-sm-8")
									textarea(class="form-control input-sm" name="ginnotes" id="ginnotes" placeholder="Notes")
							div(class="form-group")
								input(type="hidden" name="dbtable" value="goods_issue_notes")
								input(type="hidden" name="returnid" value="ginid")
								input(type="hidden" name="gin_user" id="gin_user" value=session.user_id)
								input(type="hidden" id="apppage" value="/menu/goods_issued_notes")
								button(class="btn btn-success" type="button" id="btninsert") CREATE GOODS ISSUED NOTE
		div(class="col-sm-3")
			