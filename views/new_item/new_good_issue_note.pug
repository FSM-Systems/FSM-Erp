// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	div.container
		div.row
			span &nbsp;
		div.row
			div.col-sm-3
			div.col-sm-6
				div.panel.panel-info
					div.panel-heading
						h5 #{title}
					div.panel-body
						form.form-horizontal(id="frmnewitem")
							div.form-group
								label.col-sm-4.control-label(for="ginissuedto_txt") Issued To:
								div.col-sm-8
									input.form-control.input-sm.autocomplete.nodb(type="text" ac-source="users" name="ginissuedto_txt" id="ginissuedto_txt" placeholder="Goods issued to" required)
									input(type="hidden" id="ginissuedto" name="ginissuedto")
							div.form-group
								label.col-sm-4.control-label(for="ginissuedby_txt") Issued By:
								div.col-sm-8
									input.form-control.input-sm.autocomplete.nodb(type="text" ac-source="users" name="ginissuedby_txt" id="ginissuedby_txt" placeholder="Good issued by")
									input(type="hidden" id="ginissuedby" name="ginissuedby")
							div.form-group
								label.col-sm-4.control-label(for="ginnotes") Extra Notes:
								div.col-sm-8
									textarea.form-control.input-sm(name="ginnotes" id="ginnotes" placeholder="Notes")
							div.form-group
								input(type="hidden" name="dbtable" value="goods_issue_notes")
								input(type="hidden" name="returnid" value="ginid")
								input(type="hidden" name="gin_user" id="gin_user" value=session.user_id)
								input(type="hidden" id="apppage" value="/menu/goods_issued_notes")
								button.btn.btn-success(type="button" id="btninsert") CREATE GOODS ISSUED NOTE
		div.col-sm-3
			
			