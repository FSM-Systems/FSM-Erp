// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	div.container
		div.row
			span &nbsp;
		div.row
			div.col-sm-3
			div.col-sm-6
				div.panel.panel-info
					div.panel-heading
						h5 #{title}
					div.panel-body
						form.form-horizontal(id="frmnewitem")
							div.form-group
								label.col-sm-4.control-label(for="mgdescription") Description:
								div.col-sm-8
									input.form-control.input-sm(type="text" name="mgdescription" id="mgdescription" placeholder="Icon Text" required)
							div.form-group
								label.col-sm-4.control-label(for="mgicon") Icon File:
								div.col-sm-8
									input.form-control.input-sm(type="text" name="mgicon" id="mgicon" placeholder="Icon File")
							div.form-group
								input(type="hidden" name="dbtable" value="menu_groups")
								input(type="hidden" name="returnid" value="mgid")
								input(type="hidden" name="mg_user" id="mg_user" value=session.user_id)
								input(type="hidden" id="apppage" value="/menu/desktop_icons_setup")
								button.btn.btn-success(type="button" id="btninsert") ADD DESKTOP ICON
		div.col-sm-3
			