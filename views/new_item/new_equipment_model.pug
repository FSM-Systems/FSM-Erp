// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	div(class="container")
		div(class="row")
			span &nbsp;
		div(class="row")
			div(class="col-sm-3")
			div(class="col-sm-6")
				div(class="panel panel-info")
					div(class="panel-heading")
						h5 #{title}
					div(class="panel-body")
						form(class="form-horizontal" id="frmnewitem")
							div(class="form-group")
								label(for="emdescription" class="col-sm-4 control-label") Model Description:
								div(class="col-sm-8")
									input(type="text" class="form-control input-sm" name="emdescription" id="emdescription" placeholder="Model description" required)
							div(class="form-group")
								input(type="hidden" name="dbtable" value="equipment_models")
								input(type="hidden" name="returnid" value="emid")
								input(type="hidden" id="apppage" value="/menu/equipment_models")
								button(class="btn btn-success" type="button" id="btninsert") ADD EQUIPMENT MODEL
		div(class="col-sm-3")
		
		include ../focus_first_form_item
							