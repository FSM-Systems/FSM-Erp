// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	div.container
		div.row
			span &nbsp;
		div.row
			div.col-sm-3
			div.col-sm-6
				div.panel.panel-info
					div.panel-heading
						h5 #{title}
					div.panel-body
						form.form-horizontal(id="frmnewitem")
							div.form-group
								label.col-sm-4.control-label(for="emdescription") Model Description:
								div.col-sm-8
									input.form-control.input-sm(type="text" name="emdescription" id="emdescription" placeholder="Model description" required)
							div.form-group
								input(type="hidden" name="dbtable" value="equipment_models")
								input(type="hidden" name="returnid" value="emid")
								input(type="hidden" id="apppage" value="/menu/equipment_models")
								input(type="hidden" name="_csrf" value=_csrf)
								button.btn.btn-success(type="button" id="btninsert") ADD EQUIPMENT MODEL
		div.col-sm-3
			
							