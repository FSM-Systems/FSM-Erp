// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	div.container
		div.row
			span &nbsp;
		div.row
			div.col-sm-3
			div.col-sm-6
				div.panel.panel-info
					div.panel-heading
						h5 #{title}
					div.panel-body
						form.form-horizontal(id="frmnewitem")
							div.form-group
								div.col-sm-6
									input.form-control.input-sm(type="text" name="enumberplate" id="enumberplate" placeholder="Number Plate" required)
								div.col-sm-6
									input.form-control.input-sm.datepicker(type="text" class="" name="eroadlicense" id="eroadlicense" placeholder="Road License" required)
							div.form-group
								div.col-sm-6
									input.form-control.input-sm.datepicker(type="text"  name="einsurance" id="einsurance" placeholder="Insurance" required)
								div.col-sm-6
									input.form-control.input-sm.datepicker(type="text"  name="etra" id="tra" placeholder="TRA Sticker" required)
							div.form-group
								div.col-sm-6
									input.form-control.input-sm.datepicker(type="text"  name="epurchased" id="epurchased" placeholder="Purchase Date" required)
							div.form-group
								div.col-sm-12
									textarea.form-control.input-sm(name="edescription" id="edescription" placeholder="Equipment Description" required)
							div.form-group
								input(type="hidden" name="dbtable" value="equipment")
								input(type="hidden" name="returnid" value="eid")
								input(type="hidden" id="apppage" value="/menu/equipment_setup")
								input(type="hidden" name="_csrf" value=_csrf)
								button.btn.btn-success(type="button" id="btninsert") ADD EQUIPMENT
				div.col-sm-3
					
							