// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	div(class="container")
		div(class="row")
			span &nbsp;
		div(class="row")
			div(class="col-sm-2")
			div(class="col-sm-8")
				div(class="panel panel-info")
					div(class="panel-heading")
						h5 #{title}
					div(class="panel-body")
						form(class="form-horizontal" id="frmnewitem")
							div(class="form-group")
								label(for="mdescription" class="col-sm-4 control-label") Option Text:
								div(class="col-sm-8")
									input(type="text" class="form-control input-sm" name="mdescription" id="mdescription" placeholder="Menu option Text")
							div(class="form-group")
								label(for="mlink" class="col-sm-4 control-label") API Link:
								div(class="col-sm-8")
									input(type="text" class="form-control input-sm" name="mlink" id="npassword" placeholder="API Link")
							div(class="form-group")
								label(for="mnewitemlink" class="col-sm-4 control-label") API New Item Link:
								div(class="col-sm-8")
									input(type="text" class="form-control input-sm" name="mnewitemlink" id="mnewitemlink" placeholder="API Link for new Item")
							div(class="form-group")
								label(for="mlongdescription" class="col-sm-4 control-label") Description:
								div(class="col-sm-8")
									input(type="text" class="form-control input-sm" name="mlongdescription" id="mlongdescription" placeholder="Detailed description of menu item")
							div(class="form-group")
								input(type="hidden" name="dbtable" value="menu")
								input(type="hidden" name="returnid" value="mid")
								input(type="hidden" id="apppage" value="/menu/menuconfig")
								button(class="btn btn-success" type="button" id="btninsert") ADD MENU ITEM
		div(class="col-sm-2")
		
		script.
			$(document).ready(function () {
				$("#mdescription").focus();			
			})
							