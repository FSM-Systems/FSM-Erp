// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	div.container
		div.row
			span &nbsp;
		div.row
			div.col-sm-3
			div.col-sm-6
				div(class="panel panel-info")
					div(class="panel-heading")
						h5 #{title}
					div(class="panel-body")
						form(class="form-horizontal" id="frmnewitem")
							div.form-group
								div.col-sm-6
									input.form-control.input-sm.autocomplete.nodb(type="text" ac-source="users" name="froperator_txt" id="froperator_txt" placeholder="Operator" required)
									input(type="hidden" name="froperator" id="froperator")
								div.col-sm-6
									input.form-control.input-sm.datepicker(type="text" name="frdate" id="frdate" placeholder="Date" required)
							div.form-group
								
								div.col-sm-6
									input.form-control.input-sm.autocomplete.nodb(type="text" ac-source="equipment_with_plateno" name="frequipment_txt" id="frequipment_txt" placeholder="Equipment" required)
									input(type="hidden" name="frequipment" id="frequipment")
								div.col-sm-6
									input.form-control.input-sm(type="text" name="frreceiptno" id="frreceiptno" placeholder="Receipt Number" required)
							div.form-group
								div.col-sm-6
									input.form-control.input-sm(type="number" name="frprice" id="frprice" placeholder="Price per Litre" required)
								div.col-sm-6
									input.form-control.input-sm(type="number" name="frtotal" id="frtotal" placeholder="Total Price" required)
							div.form-group
								div.col-sm-6
									input.form-control.input-sm(type="number" name="frqty" id="frqty" placeholder="Fuel Quantity Litres" required)
								div.col-sm-6
									input.form-control.input-sm(type="number" name="frhours_km" id="frhours_km" placeholder="Hours or KM" required)
							div.form-group
								input(type="hidden" name="dbtable" value="fuel_register")
								input(type="hidden" name="returnid" value="frid")
								input(type="hidden" name="fr_user" id="fr_user" value=session.user_id)
								input(type="hidden" id="apppage" value="/menu/fuel_register")
								button.btn.btn-success(type="button" id="btninsert") ADD NEW FUEL RECORD
				div.col-sm-3
	
							