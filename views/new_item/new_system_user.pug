// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	div.container
		div.row
			span &nbsp;
		div.row
			div.col-sm-3
			div.col-sm-6
				div.panel.panel-info
					div.panel-heading
						h5 #{title}
					div.panel-body
						form.form-horizontal(id="frmnewitem")
							div.form-group
								label.col-sm-2.control-label(for="lusername") Username:
								div.col-sm-10
									input.form-control.input-sm(type="text" name="lusername" id="lusername" placeholder="Assigned username" required)
							div.form-group
								label.col-sm-2.control-label(for="lpassword") Password:
								div.col-sm-10
									input.form-control.input-sm(type="text" name="lpassword" id="lpassword" placeholder="Assigned password" required)
							div.form-group
								label.col-sm-2.control-label(for="ldescription") Description:
								div.col-sm-10
									input.form-control.input-sm(type="text" name="ldescription" id="ldescription" placeholder="User Description" required)
							div.form-group
								label.col-sm-2.control-label(for="lemail") Email:
								div.col-sm-10
									input.form-control.input-sm(type="email" name="lemail" id="lemail" placeholder="User Email" required)
							div.form-group
								input(type="hidden" name="dbtable" value="login")
								input(type="hidden" name="returnid" value="lid")
								input(type="hidden" id="apppage" value="/menu/system_users_setup")
								input(type="hidden" name="_csrf" value=_csrf)
								button.btn.btn-success(type="button" id="btninsert") ADD USER
		div.col-sm-3
			
							