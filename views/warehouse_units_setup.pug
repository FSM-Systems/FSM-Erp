// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	// - h4 #{pagename}
	table.table.table-hover(style="width: 60%")
		thead
			tr 
				th.text-center ID
				th Unit Type
				th
		
		tbody
			if units.length == 0
				tr
					td(colspan="100") No results, please add a new item
			for u in units
				tr
					td #{u.wuid}
					td 
						div.input-group
							span.input-group-addon 
								span.glyphicon.glyphicon-scale(aria-hidden="true")
							input.update.form-control.input-sm(type="text" col="wuunit" colid="wuid"  colidval=u.wuid id="u_" + u.wuid value=u.wuunit)
					td 
						div.input-group.pull-right
							button.btn.btn-danger.btn-sm.btn-delete(dbcolid="wuid" dbcolidval=u.wuid id="btn_del_" + u.wuid)
								span.glyphicon.glyphicon-trash(aria-hidden="true")
	
	input( type="hidden" id="apppage" value="/menu/warehouse_units_setup")
	input( type="hidden" id="dbtable" value="warehouse_units")