// This is the template for building the main menu. It fetches JSON data from the express server and populates the template

block content
	// - h4 #{pagename}
	table(class="table table-hover" style="width: 60%" id="dbtable" dbtable="warehouse_units")
		thead
			tr 
				th.text-center ID
				th Unit Type
				th
		
		tbody
			if units.length == 0
				tr
					td(colspan="100") No results, please add a new item
			for u in units
				tr
					td #{u.wuid}
					td 
						div(class="input-group")
							span(class="input-group-addon") 
								span(class="glyphicon glyphicon-scale" aria-hidden="true")
							input(type="text" class="update form-control input-sm" col="wuunit" colid="wuid"  colidval=u.wuid id="u_" + u.wuid value=u.wuunit)
					td 
						div(class="input-group pull-right")
							button(class="btn btn-danger btn-sm" class="btn-delete" dbcolid="wuid" dbcolidval=u.wuid id="btn_del_" + u.wuid)
								span(class="glyphicon glyphicon-trash" aria-hidden="true")